@model CadernetaVacinal.Models.Vacina

@{
    ViewData["Title"] = "Vacinas";
}

<h1>Inserir Dados</h1>

<h4>Vacina</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lote" class="control-label"></label>
                <input asp-for="Lote" class="form-control mb-3"/>
                <span asp-validation-for="Lote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeVacina" class="control-label"></label>
                <input asp-for="NomeVacina" class="form-control mb-3" />
                <span asp-validation-for="NomeVacina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Local" class="control-label"></label>
                <input asp-for="Local" class="form-control mb-3" />
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataVacinação" class="control-label"></label>
                <input asp-for="DataVacinação" class="form-control mb-3" />
                <span asp-validation-for="DataVacinação" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input mb-3" asp-for="Dose" /> @Html.DisplayNameFor(model => model.Dose)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control mb-3" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control mb-3" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control mb-3" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionario" class="control-label"></label>
                <input asp-for="Funcionario" class="form-control mb-3" />
                <span asp-validation-for="Funcionario" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Inserir" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">| Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
